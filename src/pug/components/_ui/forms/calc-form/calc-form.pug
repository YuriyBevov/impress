include ../../form-controls/main-input/main-input
include ../../form-controls/main-checkbox/main-checkbox
include ../../form-controls/main-textarea/main-textarea 

.calc-form
  form(action="#")
    h2.base-title Калькулятор стоимости перевода
    p.base-text Lorem ipsum dolor sit amet consectetur adipisicing elit. Praesentium maxime, nemo nisi, iste dicta qui labore cupiditate, deserunt architecto aspernatur veniam sunt atque pariatur rem distinctio delectus laboriosam non mollitia?
    
    fieldset.calc-form__section.calc-form__section--input-group
      +main-input({
        id: 'lang_from',
        placeholder: 'Язык оригинала',
        name: 'Язык оригинала'
      })
      +main-input({
        id: 'lang_to',
        placeholder: 'Язык перевода',
        name: 'Язык перевода'
      })
    
    fieldset.calc-form__section.calc-form__section--wrap
      span.base-text.calc-form__section-title Дополнительные услуги
      +main-checkbox({
        id: 'calc_1',
        name: 'Редактура перевода',
        label: 'Редактура перевода',
        price: '0'
      })
      +main-checkbox({
        id: 'calc_2',
        name: 'Консульская легализация',
        label: 'Консульская легализация',
        price: '6000'
      })
      +main-checkbox({
        id: 'calc_3',
        name: 'Нотариальное заверение',
        label: 'Нотариальное заверение',
        price: '800'
      })
      +main-checkbox({
        id: 'calc_4',
        name: 'Апостиль',
        label: 'Апостиль',
        price: '6000'
      })
      +main-checkbox({
        id: 'calc_5',
        name: 'Доставка документации',
        label: 'Доставка документации',
        price: '500'
      })


    <strong class="calc-form__total-price" data-base-price="500"> Предварительная стоимость: от <span></span> руб*</strong>
    fieldset.calc-form__section.calc-form__section--input-group
      +main-input({
        id: 'user_name',
        placeholder: 'Ваше имя',
        name: 'Имя'
      })

      +main-input({
        id: 'user_phone',
        type: 'tel',
        placeholder: 'Телефон',
        name: 'Телефон',
        isInvalid: true
      })

      +main-input({
        id: 'user_mail',
        placeholder: 'Email',
        name: 'Email'
      })

    fieldset.calc-form__section.calc-form__section--column
      +main-checkbox({
        id: 'user_accept_2',
        name: 'Согласие на обработку персональных данных',
        label: 'Отправляю форму, Вы даете свое согласие на <a href="#" target="_blank">обработку персональных данных</a>',
        checked: true
      })

      .main-input-wrapper 
        input(type="submit" value="Отправить").main-btn

    small.base-text *Вся информация предварительная, точную стоимость и срок выполнения услуг Вам сообщит менеджер.

